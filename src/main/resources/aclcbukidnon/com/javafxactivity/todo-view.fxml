<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aclcbukidnon.com.javafxactivity.controllers.TodoController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
      
            <!-- Button to create a new todo -->
            <Button onAction="#onCreateClick" text="Create Todo">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Pane prefHeight="100.0" prefWidth="21.0" />

                        <!-- Button to delete the selected todo -->
            <Button onAction="#onDeleteClick" text="Delete Todo">
               <font>
                  <Font size="15.0" />
               </font></Button>
         </children></HBox>
      <!-- Todo List -->
      <ListView fx:id="todoList" prefHeight="200" prefWidth="300" />

   </children>
</VBox>
